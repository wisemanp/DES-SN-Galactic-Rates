journal = {\mnras},
keywords = {absorption lines — cosmology,galaxies,high-redshift — quasars,observations},
pages = {1--25},
title = {{Consensus report on 25 years of searches for damped Ly$\alpha$ galaxies in emission: Confirming their metallicity–luminosity relation at z 2}},
