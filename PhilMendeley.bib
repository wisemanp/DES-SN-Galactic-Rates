issn = {1538-4357},
journal = {\apj},
month = {feb},
number = {2},
pages = {172},
publisher = {American Astronomical Society},
title = {{Assessment of Systematic Uncertainties in the Cosmological Analysis of the SDSS Supernovae Photometric Sample}},
