journal = {\apj},
keywords = {Subject headings,color figures,cosmology,evolution — galaxies,individual (MS 1512{\`{A}}cB58) — galaxies,observations — galaxies,starburst On-line material},
pages = {742--757},
title = {{NEW OBSERVATIONS OF THE INTERSTELLAR MEDIUM IN THE LYMAN BREAK GALAXY MS 1512{\`{A}}cB58 1}},
