doi = {10.1051/0004-6361/201321591},
eprint = {1303.5076},
journal = {\aap},
month = {nov},
pages = {A16},
title = {{Planck 2013 results. XVI. Cosmological parameters}},
url = {http://arxiv.org/abs/1303.5076},
volume = {571},
year = {2014}
}
