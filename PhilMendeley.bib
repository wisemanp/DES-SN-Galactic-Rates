arxivId = {0706.1275},
author = {Butler, Nathaniel R. and Kocevski, Daniel and Bloom, Joshua S. and Curtis, Jason L.},
doi = {10.1086/522492},
eprint = {0706.1275},
month = {jun},
title = {{A Complete Catalog of Swift GRB Spectra and Durations: Demise of a Physical Origin for Pre-Swift High-Energy Correlations}},
url = {http://arxiv.org/abs/0706.1275%0Ahttp://dx.doi.org/10.1086/522492},
year = {2007}
}
