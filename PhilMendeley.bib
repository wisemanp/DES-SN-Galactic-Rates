author = {Faucher-Gigu{\`{e}}re, Claude Andr{\'{e}} and Kere{\v{s}}, Du{\v{s}}an and Ma, Chung Pei},
doi = {10.1111/j.1365-2966.2011.19457.x},
eprint = {1103.0001},
issn = {00358711},
journal = {\mnras},
keywords = {Cosmology: theory,Galaxies: evolution,Galaxies: formation,Galaxies: high-redshift,Hydrodynamics},
month = {feb},
