issn = {0004-637X},
journal = {\apj},
keywords = {EXTINCTION,ISM: DUST,METHODS: NUMERICAL,SHOCK WAVES,STARS: SUPERNOVAE: GENERAL},
month = {oct},
pages = {740},
title = {{Grain Shattering in Shocks: The Interstellar Grain Size Distribution}},
url = {http://adsabs.harvard.edu/doi/10.1086/177823},
volume = {469},
year = {2002}
}
