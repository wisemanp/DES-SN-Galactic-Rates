eprint = {1301.6753},
issn = {0035-8711},
journal = {Monthly Notices of the Royal Astronomical Society, Volume 429, Issue 4, p.3353-3370},
keywords = {cosmology: theory,galaxies: evolution,galaxies: formation,galaxies: haloes,methods: numerical},
month = {jan},
pages = {3353--3370},
title = {{Moving mesh cosmology: tracing cosmological gas accretion}},
url = {http://arxiv.org/abs/1301.6753 http://dx.doi.org/10.1093/mnras/sts595},
