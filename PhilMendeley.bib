isbn = {0004-6361},
issn = {0004-6361},
journal = {\aap},
pages = {889--905},
title = {{X-raying the interstellar medium: ROSAT observations of dust scattering halos.}},
url = {http://adsabs.harvard.edu/abs/1995A&A...293..889P%5Cnhttp://adsabs.harvard.edu/cgi-bin/nph-data_query?bibcode=1995A&A...293..889P&link_type=ARTICLE},
