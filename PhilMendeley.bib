@article{Zou2017,
abstract = {We study a sample of 17 z > 1.5 C i absorbers observed with the ESO-VLT spectrograph X-SHOOTER. We derive metallicities, depletion onto dust, extinction by dust and analyse the absorption from Mg ii, Mg i, Ca ii and Na i that are redshifted into the near infrared wavelength range. We show that most of them have high metallicity and dust content. We detect 9 Ca ii absorptions with W(Ca ii$\lambda$3934) > 0.23 {\AA} out of 14 systems where we have appropriate wavelength coverage. The observed equivalent widths are similar to what has been measured in other lower redshift surveys of Ca ii systems. We detect 10 Na i absorptions in the 11 systems where we could observe this absorption. The median equivalent width (W(Na i$\lambda$5891) = 0.68 {\AA}) is larger than what is observed in local clouds with similar H i column densities but also in z < 0.7 Ca ii systems detected in the SDSS. Most of the systems (12 out of 17) have W(Mg ii$\lambda$2796) > 2.5 {\AA} when six of them have log N(H i) < 20.3 with the extreme case of J1341+1852 which has log N(H i) = 18.18. The Mg ii absorptions are spread over more than ∆v ∼ 400 km s −1 for half of the systems; three absorbers have ∆v > 500 km s −1 . The kinematics is strongly perturbed for most of these systems which cannot arise in quiet disks and must be close to regions with intense star formation activity, contrary to what is usually observed for strong W > 2 {\AA} Mg ii systems and/or are part of objects in interaction. All this suggests that a large fraction of the cold gas at high redshift arises in disturbed environments.},
author = {Zou, S and Petitjean, P and Noterdaeme, P and Ledoux, C and Krogager, J.-K and Fathivavsari, H and Srianand, R and L{\'{o}}pez, S},
file = {:Users/pwise/Library/Application Support/Mendeley Desktop/Downloaded/Zou et al. - 2017 - Near Infrared spectroscopic observations of high redshift C i absorbers.pdf:pdf},
keywords = {ISM,absorption lines – galaxies,dust,extinction,quasars},
title = {{Near Infrared spectroscopic observations of high redshift C i absorbers}},
url = {https://arxiv.org/pdf/1710.05369.pdf},
year = {2017}
}
